{% extends 'base.html.twig' %}
{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('history_index') }}">Прокат автомобилей</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('history_index') }}">История</a></li>
                    <li><a href="{{ path('car_index') }}">Автомобили</a></li>
                    <li><a href="{{ path('rentalpoint_index') }}">Пункты выдачи</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <ul class="breadcrumb">
        <li class="active">Список</li>
    </ul>

    <h1>История проката</h1>


    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>ФИО арендатора:</th>
                <th>Госномер автомобиля:</th>
                <th>Марка и модель:</th>
                <th>Пункт выдачи:</th>
                <th>Дата выдачи:</th>
                <th>Пункт приема:</th>
                <th>Дата приема:</th>
                <th>Действия:</th>
            </tr>
        </thead>
        <tbody>
        {% for rentalHistory in rentalHistories %}
            <tr>
                <td><a href="{{ path('history_show', { 'id': rentalHistory.id }) }}">{{ rentalHistory.id }}</a></td>
                <td>{{ rentalHistory.clientname }}</td>
                <td><a href="{{ path('car_show', { 'id': rentalHistory.Car.id }) }}">{{ rentalHistory.Car.LicensePlate }}</a></td>
                <td>{{ rentalHistory.Car }}</td>
                <td><a href="{{ path('rentalpoint_show', { 'id': rentalHistory.RentalPointStart.id }) }}">{{ rentalHistory.RentalPointStart }}</a></td>
                <td>{% if rentalHistory.datestart %}{{ rentalHistory.datestart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td><a href="{{ path('rentalpoint_show', { 'id': rentalHistory.RentalPointEnd.id }) }}">{{ rentalHistory.RentalPointEnd }}</a></td>
                <td>{% if rentalHistory.dateend %}{{ rentalHistory.dateend|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('history_show', { 'id': rentalHistory.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('history_edit', { 'id': rentalHistory.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('history_new') }}">Create a new rentalHistory</a>
        </li>
    </ul>
{% endblock %}
