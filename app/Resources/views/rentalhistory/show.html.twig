{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('history_index') }}">Прокат автомобилей</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('history_index') }}">История</a></li>
                    <li><a href="{{ path('car_index') }}">Автомобили</a></li>
                    <li><a href="{{ path('rentalpoint_index') }}">Пункты выдачи</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>


    <ul class="breadcrumb">
        <li><a href="{{ path('history_index') }}">Список</a></li>
        <li class="active">Просмотр истории</li>
    </ul>


    <h1>Запись аренды</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rentalHistory.id }}</td>
            </tr>
            <tr>
                <th>Date_start</th>
                <td>{% if rentalHistory.datestart %}{{ rentalHistory.datestart|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date_end</th>
                <td>{% if rentalHistory.dateend %}{{ rentalHistory.dateend|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Client_name</th>
                <td>{{ rentalHistory.clientname }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('history_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('history_edit', { 'id': rentalHistory.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
